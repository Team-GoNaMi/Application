<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/iv_book_img"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_book_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="책 이름 입니당."
                    android:textColor="@android:color/black"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">

                    <TextView
                        android:id="@+id/book_author"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="저자" />

                    <TextView
                        android:id="@+id/tv_book_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="책 저자 입니당."
                        android:textColor="@android:color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">

                    <TextView
                        android:id="@+id/book_publisher"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="출판사" />

                    <TextView
                        android:id="@+id/tv_book_publisher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="책 출판서 입니당."
                        android:textColor="@android:color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">

                    <TextView
                        android:id="@+id/book_edition"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="Edition" />

                    <TextView
                        android:id="@+id/tv_book_edition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="책 Edition 입니당."
                        android:textColor="@android:color/black"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp">

                <TextView
                    android:id="@+id/tv_book_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="원래 가격!!"/>

                <TextView
                    android:id="@+id/tv_book_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이 가격에 팔꺼야!!"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"/>

            </LinearLayout>

            <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/rv_school_list"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal">-->

            <!--</android.support.v7.widget.RecyclerView>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginBottom="20dp">

                <ImageButton
                    android:id="@+id/ib_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="?android:attr/windowBackground"
                    android:src="@drawable/ic_bookmark_black_24dp"
                    android:layout_marginRight="16dp"/>

                <Button
                    android:id="@+id/btn_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구매하기"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">

                    <TextView
                        android:id="@+id/book_state_highlight"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="밑줄" />

                    <TextView
                        android:id="@+id/tv_book_state_highlighto"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="있음"/>

                    <TextView
                        android:id="@+id/tv_book_state_highlightx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="없음"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">

                    <TextView
                        android:id="@+id/book_state_writings"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="필기" />

                    <TextView
                        android:id="@+id/tv_book_state_writingso"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="있음"/>

                    <TextView
                        android:id="@+id/tv_book_state_writingsx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="없음"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">

                    <TextView
                        android:id="@+id/book_state_damaged"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="밑줄" />

                    <TextView
                        android:id="@+id/tv_book_state_damagedo"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="있음"/>

                    <TextView
                        android:id="@+id/tv_book_state_damagedx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="없음"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">

                    <TextView
                        android:id="@+id/book_state_cover"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="밑줄" />

                    <TextView
                        android:id="@+id/tv_book_state_covero"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="있음"/>

                    <TextView
                        android:id="@+id/tv_book_state_coverx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="없음"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="5dp">

                    <TextView
                        android:id="@+id/book_state_memo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:text="메모" />

                    <TextView
                        android:id="@+id/tv_book_state_memo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="메모에는 구매자가 책에 대한 추가적인 정보를 작성하는 곳입니다."
                        android:textColor="@android:color/black"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="판매자 정보"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_black_24dp"/>

                <!--<android.support.v7.widget.RecyclerView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->
                    <!---->
                <!--</android.support.v7.widget.RecyclerView>-->


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>