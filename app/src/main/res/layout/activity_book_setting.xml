<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="56dp"
        android:orientation="vertical" >




        <TextView
            android:id="@+id/tv_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="판매"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_writing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="필기흔적"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <CheckBox
            android:id="@+id/check_underline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="밑줄(연필/샤프)"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <CheckBox
            android:id="@+id/check_underline2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="밑줄(볼펜/형광펜)" />

        <CheckBox
            android:id="@+id/check_writing1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="필기(연필/샤프)" />

        <CheckBox
            android:id="@+id/check_writing2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:clickable="true"
            android:duplicateParentState="true"
            android:text="필기(볼펜/형광펜)" />


        <TextView
            android:id="@+id/tv_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="책표지"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <CheckBox
            android:id="@+id/check_clean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="깨끗함"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <CheckBox
            android:id="@+id/check_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="이름기입 없음" />

        <CheckBox
            android:id="@+id/check_damage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="페이지변색"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <CheckBox
            android:id="@+id/check_damage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="페이지훼손" />

        <TextView
            android:id="@+id/tv_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="책사진"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/image1"
                android:layout_width="158dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/ic_menu_gallery"
                app:srcCompat="@android:color/transparent" />


            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="158dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/ic_menu_gallery"
                app:srcCompat="@android:color/transparent" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="거래 장소"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="메모"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/ed_memo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="4"
            android:scrollbars="vertical"
            android:text="추가설명을 자유롭게 적어주세요" />

        <Button
            android:id="@+id/btn_regist"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="center"

            android:text="등록" />

    </LinearLayout>

</ScrollView>




