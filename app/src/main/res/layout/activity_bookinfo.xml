<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="책 정보"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="( 자세히 적어주세요! )"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:layout_marginBottom="30dp"/>


    <TextView
        android:id="@+id/tv_ISBN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ISBN"/>

    <EditText
        android:id="@+id/ed_ISBN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>



    <TextView
        android:id="@+id/tv_BookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="책 이름" />

    <EditText
        android:id="@+id/ed_BookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tv_edition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edition" />

    <EditText
        android:id="@+id/ed_edition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tv_Author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="저자" />

    <EditText
        android:id="@+id/ed_Author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tv_Publisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="출판사" />

    <EditText
        android:id="@+id/ed_Publisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tv_orignalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정가" />

    <EditText
        android:id="@+id/ed_originalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:text="다음 단계로" />

</LinearLayout>