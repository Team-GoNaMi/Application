<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/tv_book_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:text="책 이름 입니당."
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/book_author"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="저자" />

                    <TextView
                        android:id="@+id/tv_book_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="책 저자 입니당."
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/book_publisher"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="출판사" />

                    <TextView
                        android:id="@+id/tv_book_publisher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="책 출판서 입니당."
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/book_edition"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="출간연도" />

                    <TextView
                        android:id="@+id/tv_book_publish_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="책 출간연도입니당."
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_book_original_price"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="원래 가격!!" />

                    <TextView
                        android:id="@+id/tv_book_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이 가격에 팔꺼야!!"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp" />

                </LinearLayout>


                <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/rv_school_list"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal">-->

                <!--</android.support.v7.widget.RecyclerView>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ib_bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginEnd="15dp"
                        android:background="?android:attr/windowBackground"
                        android:gravity="center"
                        android:src="@drawable/ic_bookmark" />

                    <Button
                        android:id="@+id/btn_buy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@color/colorPrimary"
                        android:text="구매하기" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingVertical="10dp"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/book_state_highlight"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="밑줄(연필/샤프)" />

                    <TextView
                        android:id="@+id/tv_book_state_highlight1_o"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="있음" />

                    <TextView
                        android:id="@+id/tv_book_state_highlight1_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="없음" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/book_state_writings"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="밑줄(볼펜/형광펜)" />

                    <TextView
                        android:id="@+id/tv_book_state_highlight2_o"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="있음" />

                    <TextView
                        android:id="@+id/tv_book_state_highlight2_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="없음" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/book_state_damaged"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="필기(연필/샤프)" />

                    <TextView
                        android:id="@+id/tv_book_state_writing1_o"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="있음" />

                    <TextView
                        android:id="@+id/tv_book_state_writing1_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="없음" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/book_state_cover"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="필기(볼펜/형광펜)" />

                    <TextView
                        android:id="@+id/tv_book_state_writing2_o"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="있음" />

                    <TextView
                        android:id="@+id/tv_book_state_writing2_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="없음" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingVertical="10dp"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/book_state_clean"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="책표지 깨끗함" />

                    <TextView
                        android:id="@+id/tv_book_state_clean_o"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="깨끗함" />

                    <TextView
                        android:id="@+id/tv_book_state_clean_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="더러움" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/book_state_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="이름기입" />

                    <TextView
                        android:id="@+id/tv_book_state_name_o"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="있음" />

                    <TextView
                        android:id="@+id/tv_book_state_name_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="없음" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/book_state_damaged1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="페이지변색" />

                    <TextView
                        android:id="@+id/tv_book_state_damage1_o"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="있음" />

                    <TextView
                        android:id="@+id/tv_book_state_damage1_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="없음" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/book_state_damaged2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="페이지훼손" />

                    <TextView
                        android:id="@+id/tv_book_state_damage2_o"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="있음" />

                    <TextView
                        android:id="@+id/tv_book_state_damage2_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="없음" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="3dp"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/this_is_Photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:text="사진"></TextView>

                <LinearLayout
                    android:id="@+id/linearLayout_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:paddingVertical="5dp"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/book_state_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="메모" />

                <TextView
                    android:id="@+id/tv_book_state_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="메모에는 구매자가 책에 대한 추가적인 정보를 작성하는 곳입니다."
                    android:textColor="@android:color/black" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:text="판매자 정보" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_rating_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_star_black_24dp" />

                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:text="별점"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <!--<android.support.v7.widget.RecyclerView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->
                <!---->
                <!--</android.support.v7.widget.RecyclerView>-->


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>